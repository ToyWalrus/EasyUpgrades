<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <WorkGiverDef>
    <defName>UpgradeThing</defName>
    <label>upgrade the designated item to its automated counterpart</label>
    <giverClass>EasyUpgrades.WorkGiver_Upgrade</giverClass>
    <workType>Construction</workType>    
    <verb>upgrade</verb>
    <gerund>upgrading to</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <priorityInType>100</priorityInType>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>

  <WorkGiverDef>
    <defName>DowngradeThing</defName>
    <label>downgrade the designated item to its un-automated counterpart</label>
    <giverClass>EasyUpgrades.WorkGiver_Downgrade</giverClass>
    <workType>Construction</workType>
    <verb>downgrade</verb>
    <gerund>downgrading to</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <priorityInType>100</priorityInType>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>

  <WorkGiverDef>
    <defName>IncreaseQuality</defName>
    <label>attempt to increase the quality of this item</label>
    <giverClass>EasyUpgrades.WorkGiver_IncreaseQuality</giverClass>
    <workType>Construction</workType>
    <verb>increase quality</verb>
    <gerund>increasing quality for</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <priorityInType>100</priorityInType>    
  </WorkGiverDef>  
  
</Defs>